- if tweet.user != current_user
  %span.like
    - if tweet.iine?(current_user)
      = form_for(tweet.likes.find_by(user_id: current_user.id), method: :delete, remote: true) do |f|
        = button_tag(class: "fa fa-heart") do
          = content_tag :span, "#{tweet.likes_count}", class: "glyphicon glyphicon-heart"
    - else
      = form_for(tweet.likes.new, remote: true) do |f|
        %div= hidden_field_tag :tweet_id, tweet.id
        = button_tag(class: "fa fa-heart") do
          = content_tag :span, "#{tweet.likes_count}", class: "glyphicon glyphicon-heart-empty"
